<%- include("partials/head") %>
</head>
<body class="bg-white dark:bg-zinc-900 text-black dark:text-white min-h-screen flex items-center justify-center">
    <!-- Main Container -->
    <div class="text-center space-y-6 p-6 max-w-md rounded-lg bg-zinc-100 dark:bg-zinc-800 shadow-lg">
        <%- include("partials/heading") %>
        
        <p class="text-lg text-gray-600 dark:text-gray-300">
            Discover your perfect stay or host your home with ease.
        </p>
        
        <a href="/host/add-home" 
            class="block w-full text-center text-lg font-semibold text-white bg-sky-500 hover:bg-sky-600 hover:underline py-3 px-5 rounded-lg shadow-lg transition">
            Add Your Home
        </a>

        <a href="/explore" 
            class="block text-sky-500 text-sm font-medium hover:underline mt-3">
            Explore Available Homes
        </a>

        <!-- Homes Listing -->
        <div class="space-y-4 mt-8">
            <% homes.forEach(home => { %>
                <div class="bg-white dark:bg-zinc-700 rounded-lg shadow-md text-left overflow-hidden">
                    <!-- Image Container -->
                    <div class="aspect-w-16 aspect-h-9 w-full">
                        <img 
                            src="<%= home.picUrl %>" 
                            alt="<%= home.houseName %>"
                            class="w-full h-48 object-cover"

                        >
                    </div>
                    <!-- Content Container -->
                    <div class="p-4">
                        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">
                            <%= home.houseName %>
                        </h3>
                        <div class="space-y-2 text-gray-600 dark:text-gray-300">
                            <p class="flex items-center justify-between">
                                <span class="text-sky-500 font-medium">&#8377 <%= home.price %>/night</span>
                                <span class="flex items-center">
                                    <svg class="w-4 h-4 text-yellow-400 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                                    </svg>
                                    <%= home.rating %>
                                </span>
                            </p>
                            <p class="flex items-center text-sm">
                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                                </svg>
                                <%= home.location %>
                            </p>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</body>
</html>